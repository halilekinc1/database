select * from TBLBANKALAR
select * from TBLFIRMALAR
select * from TBLILLER
select * from TBLILCELER

--prosedür örneği--
create procedure BankaBilgiler
as 
select BANKAADI,TBLBANKALAR.IL,TBLBANKALAR.ILCE,SUBE,IBAN,HESAPNO,YETKILI,TELEFON,TARIH,HESAPTURU,AD 
FROM TBLBANKALAR
inner join TBLFIRMALAR 
on TBLBANKALAR.FIRMAID = TBLFIRMALAR.ID

exec BankaBilgiler
--prosedür örneği--



create procedure FirmaHareketler
as
SELECT HAREKETID,URUNAD,TBLFIRMAHAREKETLER.ADET,
(TBLPERSONELLER.AD+' '+SOYAD)as 'AD SOYAD',TBLFIRMALAR.AD
,FIYAT,TOPLAM,FATURAID,TARIH,NOTLAR
FROM TBLFIRMAHAREKETLER
INNER JOIN 
TBLURUNLER
ON 
TBLFIRMAHAREKETLER.URUNID=TBLURUNLER.ID
INNER JOIN 
TBLPERSONELLER
ON TBLFIRMAHAREKETLER.PERSONEL=TBLPERSONELLER.ID
INNER JOIN 
TBLFIRMALAR
ON
TBLFIRMAHAREKETLER.FIRMA=TBLFIRMALAR.ID


CREATE PROCEDURE MusteriHareketler
as
select HAREKETID,URUNAD,TBLMUSTERİHAREKETLER.ADET,
(TBLPERSONELLER.AD+' '+TBLPERSONELLER.SOYAD)AS 'AD SOYAD',
(TBLMUSTERİLER.AD+' '+TBLMUSTERİLER.SOYAD)AS 'MÜŞTERİ',
FIYAT,TOPLAM,TBLMUSTERİHAREKETLER.ADET,FATURAID,TARIH,NOTLAR
from
TBLMUSTERİHAREKETLER
inner join 
TBLURUNLER
on 
TBLMUSTERİHAREKETLER.URUNID=TBLURUNLER.ID
INNER JOIN TBLPERSONELLER
ON TBLMUSTERİHAREKETLER.PERSONEL=TBLPERSONELLER.ID
INNER JOIN TBLMUSTERİLER
ON
TBLMUSTERİHAREKETLER.MUSTERİ=TBLMUSTERİLER.ID


exec FirmaHareketler
exec MusteriHareketler

